<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout   
         xmlns:android="http://schemas.android.com/apk/res/android"    
         android:paddingBottom="4dip"   
         android:paddingLeft="12dip"
         android:id="@+id/dishItem"
         android:layout_width="wrap_content"   
         android:layout_height="fill_parent">
         <ImageView   
               android:layout_width="wrap_content"   
               android:layout_height="fill_parent"
               android:id="@+id/itemImage"
               android:padding="15px">   
         </ImageView>
         <LinearLayout
         		android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
         		android:orientation="horizontal"
         		android:paddingLeft="15px"
         		android:paddingTop="15px"
         		android:layout_toRightOf="@+id/itemImage"
         		android:id="@+id/itemTitle">
         <TextView   
               android:text="TextView01"   
               android:layout_height="wrap_content"   
               android:layout_width="wrap_content"   
               android:id="@+id/itemNo" 
               android:textSize="20dip">  
         </TextView> 
         <TextView   
               android:text=". "
               android:layout_height="wrap_content"   
               android:layout_width="wrap_content"   
               android:textSize="20dip">  
         </TextView>  
         <TextView   
               android:text="TextView01"   
               android:layout_height="wrap_content"   
               android:layout_width="wrap_content"   
               android:id="@+id/itemName" 
               android:textSize="20dip">  
         </TextView>
         </LinearLayout>  
         <TextView   
               android:text="TextView01"   
               android:layout_height="wrap_content"   
               android:layout_width="fill_parent"   
               android:id="@+id/itemType" 
               android:paddingLeft="15px"   
               android:layout_toRightOf="@+id/itemImage" android:layout_below="@+id/itemTitle">  
         </TextView>  
         <TextView   
               android:text="TextView02"   
               android:layout_height="wrap_content"   
               android:layout_width="fill_parent"
               android:paddingLeft="15px"   
               android:id="@+id/itemPrice" android:layout_toRightOf="@+id/itemImage" android:layout_below="@+id/itemType">  
         </TextView>  
         <TextView   
               android:text="TextView02"   
               android:layout_height="wrap_content"   
               android:layout_width="fill_parent"
               android:paddingLeft="15px"     
               android:id="@+id/itemMix" android:layout_toRightOf="@+id/itemImage" android:layout_below="@+id/itemPrice">  
         </TextView>  
</RelativeLayout> 